{
    "manifest_version": 3,
    "name": "Definition Lookup",
    "version": "1.0",
    "description": "Have a word's definition appear in a popup window",
    "permissions": ["contextMenus", "activeTab"],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["./popup.css"]
        }
    ]
}
